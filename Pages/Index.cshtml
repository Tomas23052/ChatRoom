@page
@model IndexModel
@{
    ViewData["Title"] = "CASIMIRO CHATROOM";
}

<form method="post">
    <div class="container">
        <div class="row p-1">
            <div class="col-1">User</div>
            <div class="col-5"><input type="text" id="userInput" name="userInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-1">Message</div>
            <div class="col-5"><input type="text" class="w-100" id="messageInput" name="messageInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <button type="submit">Send Message</button>
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>
</form>
<script src="/lib/microsoft/signalr/dist/browser/signalr.js"></script>


